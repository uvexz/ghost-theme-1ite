{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}

        <div class="content">
            <div class="article">

                {{content}}

                <hr>

                <div class="back-to-top">
                    <i class="fa fa-calendar"></i>&nbsp; {{date format="YYYY-MM-DD"}}  &nbsp;<i class="fa fa-chevron-circle-up"></i>&nbsp; <a href="#">返回顶部</a>
                </div>
                
                <hr>

                <div id="comments">
                    <div id="cusdis_thread"
                      data-host="https://comments.im.sb"
                      data-app-id="0bf9cc00-ef8d-48e6-bfd3-52079d5f18a3"
                      data-page-id="{{title}}"
                      data-page-url="{{@blog.url}}{{url}}"
                      data-page-title="{{title}}"
                    ></div>
                </div>
            </div>
        </div>

{{/post}}
